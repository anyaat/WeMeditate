
- allow = policy(category)

tr.record id=dom_id(category)
  td.top.aligned
    a href=polymorphic_admin_path([(:edit unless allow.show?), :admin, category])
      = category.preview_name

  td.collapsing.top.right.aligned
    = category.articles.count

  td.collapsing.top.aligned
    = table_record_status_label(category)

  - if local_assigns[:original_locale]
    td.collapsing.top.aligned.faded
      = language_name(category.original_locale)
