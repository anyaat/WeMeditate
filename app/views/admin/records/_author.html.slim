
- allow = policy(author)

tr.record id=dom_id(author)
  td.top.aligned
    a href=polymorphic_admin_path([:edit, :admin, author])
      = author.preview_name
    br
    .faded = author.title

  td.collapsing.right.aligned.faded
    = author.articles.count

  td.collapsing.faded
    = countries[author.country_code]

  td.collapsing.faded
    - if author.user.present?
      - if policy(author.user).edit?
        a href=polymorphic_admin_path([:edit, :admin, author.user])
          = author.user.preview_name
      - else
        = author.user.preview_name
    - else
      = translate('admin.index.attribute.none')

  - if local_assigns[:original_locale]
    td.collapsing.top.aligned.faded
      = language_name(author.original_locale)
