
- allow = policy(article)

tr.record id=dom_id(article)
  td.top.aligned
    a href=polymorphic_admin_path([(:edit unless allow.show?), :admin, article])
      = article.preview_name

  td.collapsing.top.aligned.faded
    = article.category&.name

  td.collapsing.top.aligned.faded
    - if params[:sort] == 'created_at'
      = localize article.created_at, format: :short
    - else
      = localize article.updated_at, format: :short

  td.collapsing.top.aligned
    = table_record_status_label(article)

  - if local_assigns[:original_locale]
    td.collapsing.top.aligned.faded
      = language_name(article.original_locale)
